{
  "web": {
    "screenshot": {
      "enabled": true
    },
    "browser": "chrome",
    "isHeadless": true,
    "browserOptions": {
      "chrome": {
        "options": ["--incognito", "--window-size=1200,800"],
        "downloadOption": {
          "isDownloadRequired": false,
          "downloadOptions": ["download.default_directory=path/to/download/directory"]
        }
      },
      "firefox": {
        "options": [],
        "downloadOption": {
          "isDownloadRequired": false,
          "downloadOption": ["browser.download.dir=path/to/download/directory", "browser.download.folderList=2", "browser.helperApps.neverAsk.saveToDisk=application/octet-stream"]
        }
      }
    }
  },
  "mobile": {
    "screenshot": {
      "enabled": true
    }
  },
  "api": {
    "baseurl": "https://reqres.in",
    "log": {
      "request": true,
      "response": true
    },
    "responseTimeOut": 3000,
    "basePath": "/api"
  },
  "report": {
    "path": "target/spark/spark.html",
    "configPath": "src/test/resources/spark.config.json"
  }
}
